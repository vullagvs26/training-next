generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  email     String   @unique
  name      String?
  sectionId Int
  Section   Section @relation(fields: [sectionId], references: [id], map: "user_section_id_foreign")

  @@index([sectionId], map: "user_section_id_foreign")
}

model Section {
  id           Int      @id @default(autoincrement())
  createdAt    DateTime @default(now())
  section_name String   
  section_code String

  User User[]
}
